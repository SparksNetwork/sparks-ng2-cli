{
  "exclude": [ "test.ts", "*/test/*", "src", "node_modules" ],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/services",
    "sourceMap": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "schemas": ["schemas"]
    }
  }
}

